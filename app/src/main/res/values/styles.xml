<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="note_images">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
    </style>

    <style name="note_personal">
        <item name="android:color">#FFFFFF</item>
        <item name="android:textSize">12dp</item>
        <item name="android:text">Personal notes</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="note_office">
        <item name="android:color">#FFFFFF</item>
        <item name="android:textSize">12dp</item>
        <item name="android:text">Office notes</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="note_public">
        <item name="android:color">#FFFFFF</item>
        <item name="android:textSize">12dp</item>
        <item name="android:text">Public notes</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="left1_style">
        <item name="android:background">#d9e2e2</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:layout_width">160dp</item>
        <item name="android:layout_height">70dp</item>
        <item name="android:text">Note 1</item>
        <item name="android:textSize">18dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:color">#000000</item>
    </style>

    <style name="left2_style">
        <item name="android:background">#f75d5d</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:layout_width">160dp</item>
        <item name="android:layout_height">135dp</item>
        <item name="android:text">Note 1</item>
        <item name="android:textSize">18dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:color">#000000</item>

    </style>

    <style name="right1_style">
        <item name="android:background">#b5651d</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:layout_width">125dp</item>
        <item name="android:layout_height">55dp</item>
        <item name="android:text">attach a photo</item>
        <item name="android:color">#000000</item>
    </style>

    <style name="right2_style">
        <item name="android:background">#ffff00</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:layout_width">125dp</item>
        <item name="android:layout_height">160dp</item>
        <item name="android:text">attach a photo</item>
        <item name="android:color">#000000</item>
    </style>

    <style name="line">
        <item name="android:background">#ffffff</item>
        <item name="android:layout_width">300dp</item>
        <item name="android:layout_height">7dp</item>
        <item name="android:layout_margin">8dp</item>
    </style>
</resources>
